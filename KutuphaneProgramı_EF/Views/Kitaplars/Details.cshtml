@model KutuphaneProgramı_EF.Models.Kitaplar

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-white" style="background-color: red;border-radius: 30px;">Detay</h1>

<div>
    <h4>Kitaplar</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Adı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ad)
        </dd>
        <dt class = "col-sm-2">
            Sayfa Sayısı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SayfaSayisi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Stok)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stok)
        </dd>
        <dt class = "col-sm-2">
            Tür
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Turler.TurAd)
        </dd>
        <dt class = "col-sm-2">
            Yayin Evi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.YayinEvleri.Ad)
        </dd>
        <dt class = "col-sm-2">
            Yazar
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Yazarlar.AdSoyad)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@Model.Isbn">Düzenle</a> 
    <a class="btn btn-outline-primary btn-sm" asp-action="Index">Listeye Geri Dön</a>
</div>
