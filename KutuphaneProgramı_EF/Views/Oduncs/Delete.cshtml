@model KutuphaneProgramı_EF.Models.Odunc

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-white" style="background-color: red;border-radius: 30px;">
    Sil
</h1>

<h3>Bu kaydı silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Odunc İşlemleri</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Uye Adı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Uye.AdSoyad)
        </dd>
        <dt class="col-sm-2">
            Kitap Isbn
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KitaplarIsbnNavigation.Isbn)
        </dd>
        <dt class="col-sm-2">
            Veriliş Tarihi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VerilisTarihi)
        </dd>
        <dt class="col-sm-2">
            Teslim Tarihi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TeslimTarihi)
        </dd>
        <dt class="col-sm-2">
            Durum
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Iptal)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a class="btn btn-outline-primary btn-sm" asp-action="Index">Listeye Geri Dön</a>
    </form>
</div>
