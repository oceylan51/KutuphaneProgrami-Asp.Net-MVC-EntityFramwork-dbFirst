@model KutuphaneProgramı_EF.Models.Turler

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-white" style="background-color: red;border-radius: 30px;">Detay</h1>

<div>
    <h4>Turler</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tür Adı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TurAd)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@Model.Id">Düzenle</a> |
    <a class="btn btn-outline-primary btn-sm" asp-action="Index">Liste Geri Dön</a>
</div>
