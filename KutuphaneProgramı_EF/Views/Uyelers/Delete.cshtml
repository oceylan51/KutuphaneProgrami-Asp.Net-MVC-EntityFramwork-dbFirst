@model KutuphaneProgramı_EF.Models.Uyeler

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-white" style="background-color: red;border-radius: 30px;">Sil</h1>

<h3>Bu kaydı silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Uye</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Adı Soyadı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AdSoyad)
        </dd>
        <dt class="col-sm-2">
            Cinsiyet
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cinsiyet)
        </dd>
        <dt class="col-sm-2">
            Doğum tarihi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DogumTarihi)
        </dd>
        <dt class="col-sm-2">
            Telefon
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mail)
        </dd>
        <dt class="col-sm-2">
            Üyelik Tarihi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UyelikTarihi)
        </dd>
        <dt class="col-sm-2">
            Uyelik Tipi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UyelikTipi)
        </dd>
        <dt class="col-sm-2">
            Tc Kimlik No
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TcNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Meslek)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Meslek)
        </dd>
        <dt class="col-sm-2">
            Eğitim Durumu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EgitimDurumu)
        </dd>
        <dt class="col-sm-2">
            Ceza Durumu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CezaDurumu)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a class="btn btn-outline-primary btn-sm" asp-action="Index">Listeye Geri Dön</a>
    </form>
</div>
