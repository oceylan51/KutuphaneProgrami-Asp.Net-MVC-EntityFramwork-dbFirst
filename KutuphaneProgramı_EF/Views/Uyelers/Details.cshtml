        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UyelikTipi)
        </dd>
        <dt class = "col-sm-2">
            Tc Kimlik No
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TcNo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Meslek)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Meslek)
        </dd>
        <dt class = "col-sm-2">
            Eğitim Durumu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EgitimDurumu)
        </dd>
        <dt class = "col-sm-2">
            Ceza Durumu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CezaDurumu)
        </dd>
